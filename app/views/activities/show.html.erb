<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" id="carousel" style="height: 500px; width: 100%">
      <div class="carousel-item active">
       <%= cl_image_tag(@activity.photos[0].key)%>
      </div>
      <% @activity.photos.each do |photo| %>
        <div class="carousel-item">
          <%= cl_image_tag(photo.key)%>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class= "container mt-5">
     <div class="mb-0" id="map"
        style="width: 30%; height: 300px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    <div class="col-md-6 mt-2" id= "user-info">
    <% @reviews.each do |review| %>
        <small>
          <% count = 0 %>
            <% 5.times do %>
              <% if review.rating > count %>
                <i class="fas fa-star"></i>
              <% else %>
                <i class="far fa-star"></i>
              <% end %>
          <% count += 1 %>
          <% end %>
        </small>
      <p><%= link_to "(Check reviews)", activity_reviews_path(@activity) %></p>
    <% end %>
      <h2>This activity was created by <%= @user.nickname %></h2>
      <p>Click on the avatar to chat with him</p>
      <div class= "user-description">
        <p> <%= @activity.user.persona_description %> </p>
        <p> Category: <%= link_to @activity.category.name, activity_path(@activity.category) %></p>
        <p>Web site available: <%= link_to @activity.website, @activity.website %></p>
      </div>
    </div>
</div>

<div class= "m-5 p-5">
<div class="container-fluid px-lg-5">
  <div class="row mx-lg-n5 align-items-center" >
    <div class="col-2 py-3 px-lg-5">  <h1>Who</h1> </div>
    <div class="col py-3 px-lg-5"> <p><%= @activity.who_description %></p> </div>
  </div>
</div>
<div class="container-fluid px-lg-5">

  <div class="row mx-lg-n5 align-items-center">
    <div class="col-2 py-3 px-lg-5">  <h1>Why</h1> </div>
    <div class="col py-3 px-lg-5">  <p><%= @activity.why_description %></p></div>
  </div>

</div>

<div class="container-fluid px-lg-5">

  <div class="row mx-lg-n5 align-items-center">
    <div class="col-2 py-3 px-lg-5">  <h1>What</h1> </div>
    <div class="col py-3 px-lg-5">   <p><%= @activity.what_description %></p> </div>
  </div>
  <div class="row mx-lg-n5 align-items-center">
    <div class="col-2 py-3 px-lg-5">  <h1>When</h1> </div>
    <div class="col py-3 px-lg-5">
      <p>From: <%= @activity.start_date %></p>
      <p>To: <%= @activity.end_date %></p>
    </div>
  </div>
<div class="row mx-lg-n5 align-items-center">
 <div class="col-2 py-3 px-lg-5">  <h1>Where</h1> </div>
  <div class="col py-3 px-lg-5">  <p>Meeting point: <%= link_to @activity.meeting_address %></p>
   <o>Activity: <%= link_to @activity.activity_address %></p> </div>
</div>
  <div class="row mx-lg-n5 align-items-center">
    <div class="col-2 py-3 px-lg-5">  <h1>Donation:</h1> </div>
    <div class="col py-3 px-lg-5">   <p>$<%= @activity.donation %>.00</p> </div>
  </div>
  <div>
  <h3>Requirements for this activity:</h3> <p> <%= @activity.requirements %></p>
  </div>
  <div class="row mx-lg-n5 align-items-center">
    <div class="col-2 py-3 px-lg-5">  <h1>Book</h1> </div>
    <div class="col py-3 px-lg-5">
      <div class= "input-group" >
    <%= simple_form_for([@activity, @booking]) do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.submit "Book ",
     class: "btn btn-warning mt-2 btn-block" %>  <% end %>
     </div>
    </div>
  </div>
</div>



