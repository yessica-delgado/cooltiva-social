  <h1>Web site available: <%= @activity.website %></h1>
  <h1><%= @activity.who_description %></h1>
  <h1><%= @activity.why_description %></h1>
  <h1><%= @activity.what_description %></h1>
  <h1>From: <%= @activity.start_date %></h1>
  <h1>To: <%= @activity.end_date %></h1>
  <h1>Meeting point: <%= @activity.meeting_address %></h1>
  <h1>Activity: <%= @activity.activity_address %></h1>
  <h1>Donation: <%= @activity.donation %></h1>
  <h1>Requirements: <%= @activity.requirements %></h1>
</div>
