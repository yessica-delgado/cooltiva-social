
<div class="form-create-activity">

<%= simple_form_for(@activity) do |f| %>
  <%= f.input :title %>
  <%= f.input :category_id, collection: Category.all %>
  <%= f.input :website %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :who_description %>
  <%= f.input :why_description %>
  <%= f.input :what_description %>
  <%= f.input :meeting_address %>
  <%= f.input :activity_address %>
  <%= f.input :capacity %>
  <%= f.input :donation %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :requirements %>

  <div class="create-btn" >
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>

</div>
