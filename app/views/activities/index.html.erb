
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<% @activities.each do |activity| %>
  <div>
    <h1> <%= activity.title %> </h1>
    <p> Category: <%= activity.category.name %></p>
  </div>
<% end %>
