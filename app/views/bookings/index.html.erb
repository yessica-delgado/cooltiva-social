
<div class="container">
  <div class="row">
    <div class="col-12"> <h3>Upcoming bookings</h3>
    </div>
  <% @upcoming_bookings.each do |booking| %>
  <br> </br>
    <div class="col-12">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= cl_image_tag(booking.activity.photos[0].key, {:style => "height: 150px"})%>
          </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="text-left">  <%= booking.activity.title %> </h4>
            <p class="card-text"> <%= booking.activity.description %> </p>
            <p class="card-text"><small class="text-muted">
            <%= booking.start_date %> |
            <%= booking.end_date %></small></p>
            <%= link_to "Cancel booking",
            booking_path(booking),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

    <div class="col-12">
      <h3>Past events</h3>
    </div>

<% @past_bookings.each do |booking| %>

<br> </br>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
       <div class="col-md-4">
        <%= cl_image_tag(booking.activity.photos[0].key)%>
       </div>
       <div class="col-md-8">
        <div class="card-body">
          <h5 class="">  <%= booking.activity.title %> </h5>
          <p class="card-text"> <%= booking.activity.description %> </p>
          <p class="card-text"><small class="text-muted">
            <%= booking.start_date %> |
            <%= booking.end_date %></small></p>
        </div>
        <div> <%= link_to "Cancel booking",
            booking_path(booking),
            method: :delete,
            data: { confirm: "Are you sure?" } %> |
            <%= link_to "Add Review", new_activity_review_path(booking.activity.id) %>
        </div>
      </div>
  </div>
</div>
</div>
<% end %>
</div>
</div>


